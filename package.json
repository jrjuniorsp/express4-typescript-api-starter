{
  "name": "express4-typescript-api-starter",
  "version": "0.0.1",
  "description": "Express 4 (Node.js framework) with Typescript support for API development",
  "main": "index.js",
  "scripts": {
    "grunt": "grunt",
    "dev": "concurrently \"grunt watch\" \"nodemon ./bin/www\" ",
    "start": "node ./bin/www",
    "postinstall": "node_modules/.bin/typings install && npm run grunt"
  },
  "keywords": [
    "express",
    "nodejs",
    "typescript"
  ],
  "author": "Jair Rillo Junior <jairrillo@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.15.1",
    "express": "^4.13.4",
    "morgan": "^1.7.0",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^2.1.0",
    "nodemon": "^1.9.2",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-ts": "^5.5.1",
    "grunt-tslint": "^3.1.0",
    "tslint": "^3.10.2",
    "typescript": "^1.8.10",
    "typings": "^1.0.4"    
  }
}
